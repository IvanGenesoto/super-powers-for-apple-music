{
  "name": "super-powers-for-apple-music",
  "version": "0.1.0",
  "description": "Automatically derived artist attributes for Apple Music.",
  "main": "dist/server/main.js",
  "scripts": {
    "start": "node -r esm .",
    "prestart": "run-s build bundle",
    "build": "babel --config-file ./.rc/.babelrc src -d dist --copy-files --source-maps",
    "bundle": "browserify -p esmify dist/client/main.js -o dist/server/public/main.js -p mapstraction --debug",
    "ci": "npm run clean && run-p lint check build && run-s test prune",
    "clean": "npm ci -s && npx rimraf dist",
    "lint": "run-p lint:js lint:css lint:html",
    "lint:js": "eslint --config .rc/.eslintrc --ignore-path .gitignore .",
    "lint:css": "stylelint --config-basedir . --config .rc/.stylelintrc .",
    "lint:html": "htmlhint --config .rc/.htmlhintrc -f compact .",
    "check": "run-p check:use check:updates",
    "check:use": "depcheck --config .rc/.depcheckrc",
    "check:updates": "ncu -s -e 2",
    "test": "mocha --reporter min -r esm \"dist/**/*.test.js\"",
    "prune": "npm prune --production",
    "watch": "nodemon --config .rc/.nodemonrc -e js,html,css -r esm ."
  },
  "dependencies": {
    "esm": "^3.2.25",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/eslint-plugin": "^7.12.1",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-numeric-separator": "^7.12.7",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-proposal-pipeline-operator": "^7.12.1",
    "@babel/plugin-proposal-throw-expressions": "^7.12.1",
    "browserify": "^17.0.0",
    "chai": "^4.2.0",
    "depcheck": "^1.3.1",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-block-comments": "0.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-unicorn": "^23.0.0",
    "esmify": "^2.1.1",
    "htmlhint": "^0.14.2",
    "mapstraction": "^1.0.1",
    "mocha": "^8.2.1",
    "mock-require": "^3.0.3",
    "npm-check-updates": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanGenesoto/perfect-playlist.git"
  },
  "bugs": {
    "url": "https://github.com/IvanGenesoto/perfect-playlist/issues"
  },
  "homepage": "https://github.com/IvanGenesoto/perfect-playlist#readme",
  "author": "Ivan Genesoto",
  "license": "UNLICENSED",
  "keywords": []
}
